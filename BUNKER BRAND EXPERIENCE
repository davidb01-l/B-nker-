    <script>
        function validarAcceso() {
            const p = document.getElementById('pass').value;
            if(p === "demden-kisgan-qUgmi1") {
                document.getElementById('loginArea').style.display = 'none';
                document.getElementById('panelMaestro').style.display = 'block';
            } else {
                alert("Clave incorrecta.");
            }
        }

        function subirFoto(event) {
            const nombre = document.getElementById('nombreProyecto').value;
            if(!nombre) { alert("Pon un nombre al proyecto primero"); return; }
            
            const file = event.target.files[0];
            const reader = new FileReader();
            reader.onload = function(e) {
                const id = Date.now();
                const grid = document.getElementById('gridPortafolio');
                const div = document.createElement('div');
                div.className = 'project-thumb';
                div.id = id;
                div.innerHTML = `
                    <button class="delete-btn" onclick="document.getElementById('${id}').remove()">‚úï</button>
                    <img src="${e.target.result}">
                    <div style="position:absolute; bottom:0; background:rgba(0,0,0,0.7); width:100%; font-size:8px; text-align:center;">${nombre}</div>
                `;
                grid.appendChild(div);
                document.getElementById('nombreProyecto').value = "";
            };
            reader.readAsDataURL(file);
        }
    </script>
